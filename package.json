{
  "name": "hostsmanager",
  "productName": "hostsmanager",
  "version": "1.0.1",
  "description": "A simple ElectronJS application to manage your etc/hosts file",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --mac --windows --linux",
    "buildWin": "electron-builder --win",
    "buildMac": "electron-builder --mac",
    "buildLinux": "electron-builder --linux",
    "release": "electron-builder --mac --windows --linux --publish always",
    "releaseWin": "electron-builder --win --publish always",
    "releaseMac": "electron-builder --mac --publish always",
    "releaseLinux": "electron-builder --linux --publish always"
  },
  "build": {
    "appId": "com.cmkrist.hostsmanager",
    "productName": "Hosts Manager",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "icon": false
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "keywords": [],
  "author": {
    "name": "Cody Krist",
    "email": "cmkrist@umich.edu"
  },
  "license": "MIT",
  "dependencies": {
    "electron-build": "^0.0.3",
    "electron-updater": "^6.1.1",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "electron": "25.3.1",
    "electron-builder": "^24.6.3"
  }
}
